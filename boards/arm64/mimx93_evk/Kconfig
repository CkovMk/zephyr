
choice BOARD_MIMX93_EVK_A55_EXP_SEL
	prompt  "i.MX93 EVK board mux control"
	default BOARD_MIMX93_EVK_A55_EXP_SEL_NO_INIT
	#depends on I2C

config BOARD_MIMX93_EVK_A55_EXP_SEL_NO_INIT
	bool "Do not control board mux during boot"
	help
	  Do not control EXP_SEL signal to select group on GPIO muxes on
	  i.MX 93 EVK.

config BOARD_MIMX93_EVK_A55_EXP_SEL_MUX_A
	bool "Select board mux group A"
	help
	  Control EXP_SEL signal to select group A on all GPIO muxes on
	  i.MX 93 EVK. Requires I2C2 and ADP5580_GPIO driver.

config BOARD_MIMX93_EVK_A55_EXP_SEL_MUX_B
	bool "Select board mux group B"
	help
	  Control EXP_SEL signal to select group B on all GPIO muxes on
	  i.MX 93 EVK. Requires I2C2 and ADP5580_GPIO driver.

endchoice

config BOARD_MIMX93_EVK_A55_EXP_SEL_INIT_PRIO
	int "i.MX 93 EVK board mux control init priority"
	default 50
	depends on BOARD_MIMX93_EVK_A55_EXP_SEL_MUX_A || BOARD_MIMX93_EVK_A55_EXP_SEL_MUX_B

choice BOARD_MIMX93_EVK_A55_LOG_LEVEL
    prompt "i.MX 93 EVK board init log level"
    default BOARD_MIMX93_EVK_A55_LOG_LEVEL_INFO
    help
      Control log level for i.MX 93 EVK board init.

    config BOARD_MIMX93_EVK_A55_LOG_LEVEL_NONE
        bool "No logs"
    config BOARD_MIMX93_EVK_A55_LOG_LEVEL_ERROR
        bool "Error logs"
    config BOARD_MIMX93_EVK_A55_LOG_LEVEL_WARNING
        bool "Warning logs"
    config BOARD_MIMX93_EVK_A55_LOG_LEVEL_INFO
        bool "Info logs"
    config BOARD_MIMX93_EVK_A55_LOG_LEVEL_DEBUG
        bool "Debug logs"
endchoice #BOARD_MIMX93_EVK_A55_LOG_LEVEL

config BOARD_MIMX93_EVK_A55_LOG_LEVEL
    int
    default 0 if BOARD_MIMX93_EVK_A55_LOG_LEVEL_DEBUG
    default 1 if BOARD_MIMX93_EVK_A55_LOG_LEVEL_INFO
    default 2 if BOARD_MIMX93_EVK_A55_LOG_LEVEL_WARNING
    default 3 if BOARD_MIMX93_EVK_A55_LOG_LEVEL_ERROR
    default 4 if BOARD_MIMX93_EVK_A55_LOG_LEVEL_NONE